<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".StateLayoutSampleActivity">

	<com.erkutaras.statelayout.StateLayout
		android:id="@+id/stateLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		app:sl_infoLayout="@layout/layout_custom_info"
		app:sl_loadingLayout="@layout/layout_custom_loading"
		app:sl_state="content">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical">

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/buttonShowContent"
				style="@android:style/TextAppearance.Small"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="32dp"
				android:gravity="center"
				android:minWidth="180dp"
				android:text="@string/show_content_state"
				android:textAllCaps="false"
				android:textColor="@android:color/black" />

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/buttonShowError"
				style="@android:style/TextAppearance.Small"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="32dp"
				android:gravity="center"
				android:minWidth="180dp"
				android:text="@string/show_error_state"
				android:textAllCaps="false"
				android:textColor="@android:color/black" />

		</LinearLayout>

	</com.erkutaras.statelayout.StateLayout>

</androidx.constraintlayout.widget.ConstraintLayout>